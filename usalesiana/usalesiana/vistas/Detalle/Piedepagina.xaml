<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="usalesiana.vistas.Detalle.Piedepagina">
    <Grid>
        <Frame HorizontalOptions="Center"
               CornerRadius="50"
               Margin="15"
               HasShadow="False"
               Padding="10">
            <Frame.Background >
                <LinearGradientBrush StartPoint="1,0">
                    <GradientStop Color="#B7A4FF"
                                  Offset="0.5"/>
                    <GradientStop Color="#8866FE"
                                  Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>
            <Grid ColumnDefinitions="auto,*,auto">
                <Frame CornerRadius="40"
                       Padding="10">
                    <Image Source="https://i.ibb.co/ZfQBjXg/LOGO.jpg"
                           HeightRequest="30"/>
                </Frame>
                <Label Text="Universidad Salesiana de Bolvia"
                       Grid.Column="1"
                       VerticalOptions="Center"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="15"
                       FontAttributes="Bold"
                       Margin="10,0"
                       TextColor="White"/>

            </Grid>
        </Frame>
    </Grid>
</ContentView>